#!/bin/env node

var common = require('./common'),
    dev = require('metalsmith-dev');

// Fix build function so it runs without parameters
var buildFunc = common.build;
common.build = function() {
  buildFunc.call(common, function(err) {
    if (err) throw err;
  });
};

dev.watch(common, ['templates/**/*']);
dev.serve(common, 1313);
